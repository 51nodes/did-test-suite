{
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "quotes": [2, "single"]
  },
  "overrides": [
    {
      "files": "**/*.test.js",
      "rules": {
        "node/no-unpublished-require": 0,
        "node/no-missing-require": 0
      }
    }
  ]
}
